<EditForm Model="@appuser" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Name: </label>
        <div>
            <InputText @bind-Value="@appuser.Name" class="form-control" />
            <ValidationMessage For="@(() => appuser.Name)" />
        </div>
    </div>
    <div class="form-group">
        <label>DateOfBirth: </label>
        <div>
            <InputDate @bind-Value="@appuser.DateOfBirth" class="form-control" />
            <ValidationMessage For="@(() => appuser.DateOfBirth)" />
        </div>
    </div>
    <div class="form-group">
        <label>Gender: </label>
        <div>
            <InputText @bind-Value="@appuser.Gender" class="form-control" />
            <ValidationMessage For="@(() => appuser.Gender)" />
        </div>
    </div>
    <div class="form-group">
        <label>Email: </label>
        <div>
            <InputText @bind-Value="@appuser.Email" class="form-control" />
            <ValidationMessage For="@(() => appuser.Email)" />
        </div>
    </div>
    <div class="form-group">
        <label>Contact: </label>
        <div>
            <InputNumber @bind-Value="@appuser.Contact" class="form-control" />
            <ValidationMessage For="@(() => appuser.Contact)" />
        </div>
    </div>
    <div class="form-group">
        <label>Address: </label>
        <div>
            <InputText @bind-Value="@appuser.Address" class="form-control" />
            <ValidationMessage For="@(() => appuser.Address)" />
        </div>
    </div>

    <button type="submit" class="btn btn-success btn-block">
        @ButtonText
    </button>
</EditForm>

@code {
    [Parameter] public AppUser appuser { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}